---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="site-header">
  <!-- PC Header -->
  <div class="header-pc">
    <div class="logo">
		<img src="/images/logos/header_skl.png" alt="Andes Life ロゴ">
	</div>

    <nav class="nav-menu">
      <a href="/">
		<span class="label">
			<i class="fa-solid fa-house"></i>
			ホーム
		</span>
		<span class="en">HOME</span>
	  </a>
      <a href="/outdoor">
		<span class="label">
			<i class="fa-solid fa-campground"></i>
			アウトドア
		</span>
		<span class="en">OUTDOOR</span>
	  </a>
      <a href="/misc">		
		<span class="label">
			<i class="fa-solid fa-book-open"></i>
			雑記
		</span>
		<span class="en">NOTE</span>
	  </a>
      <a href="/contact">
		<span class="label">
			<i class="fa-solid fa-envelope"></i>
			お問い合わせ
		</span>
		<span class="en">INQUIRY</span>
	  </a>
      <a href="/sitemap">
		<span class="label">
			<i class="fa-solid fa-feather-pointed"></i>
			サイトマップ
		</span>
		<span class="en">SITEMAP</span>
	  </a>
      <a href="/search" class="search-icon">
		<i class="fa-solid fa-magnifying-glass"></i>
	  </a>
    </nav>
  </div>

  <!-- SP Header -->
  <div class="header-sp">
    <button class="hamburger" id="hamburgerBtn">☰</button>
    <div class="sp-logo">
		<img src="/images/logos/header_skl.png" alt="Andes Life ロゴ">
	</div>
    <a href="/search" class="search-icon">
		<i class="fa-solid fa-magnifying-glass"></i>
	</a>
  </div>

  <!-- SP Slide Menu -->
	<div class="sp-menu" id="spMenu">
	<button class="close-btn" id="closeBtn">×</button>

	<nav>
		<a href="/">ホーム</a>
		<a href="/outdoor">アウトドア</a>
		<a href="/misc">雑記</a>
		<a href="/contact">お問い合わせ</a>
		<a href="/sitemap">サイトマップ</a>
		<a href="/search">検索</a>
	</nav>
	</div>
</header>

<script>
// sp用ハンバーガーメニュー動作
const btn = document.getElementById("hamburgerBtn");
const menu = document.getElementById("spMenu");
const closeBtn = document.getElementById("closeBtn");

btn.addEventListener("click", () => {
	menu.classList.toggle("open");
});

closeBtn.addEventListener("click", () => {
	menu.classList.remove("open");
});

</script>

<style>
.logo img {
    max-width: 100%;
    height: 45px; /* 好きな高さに調整 */
}
.sp-logo img {
  height: 32px; /* 好きな高さに調整 */
  width: auto;
}
.sp-logo {
    padding-top: 8px;
}

.close-btn {
  position: absolute;
  top: 1rem;
  right: 1rem;
  font-size: 2rem;
  background: none;
  border: none;
  color: #fff;
  cursor: pointer;
}

	/* 全体：ヒーロー動画に重ねるため透過 */
.site-header {
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 10;
  background: transparent; /* ← 透過 */
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

/* PC Header */

.header-pc {
    width: 100%;
    max-width: auto;
    min-width: 0;
    margin: 0 auto;
    padding: 0.8rem 2rem;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 1rem;
}

/* ---ヘッダーメニュー--- */
.nav-menu {
    margin-left: auto;
    display: flex;
    gap: 2rem;
}

.nav-menu a {
position: relative;
font-size: 1.0rem;
color: #fff;
text-decoration: none;
font-weight: 400;
padding-bottom: 4px;
display: flex;
flex-direction: column; /* ← 2段にする */
align-items: center;     /* ← 中央揃え */
line-height: 1.3;
}
/* 1段目：アイコン＋日本語を横並び */
.nav-menu a .label {
  display: inline-flex;
  align-items: center;
  gap: 4px;         /* アイコンと文字の間 */
}
/* アイコンの見た目 */
.nav-menu a .label i {
  font-size: 0.75rem;  
  position: relative;
  top: -1px
}
/* 2段目：英語表記 */
.nav-menu a .en {
font-size: 0.7rem;
opacity: 0.7;        /* 少し薄く */
}


/* アンダーバー（中央から左右へ） */
.nav-menu a::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: -5px;
  width: 0;
  height: 2.0px;
  background: #fff;
  transition: 0.2s ease;
  transform: translateX(-50%);
}

.nav-menu a:hover::after {
  width: 100%;
}

/* SP Header */
.header-sp {
  display: none !important;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}

.search-icon i {
  position: relative;
  top: 5px;
  font-size: 1.4rem;
  color: #fff;
  text-decoration: none;
}

/* SP Slide Menu */
.sp-menu {
  position: fixed;
  top: 0;
  left: -100%;
  width: 70%;
  height: 100vh;
  background: rgba(0,0,0,0.85);
  padding: 2rem;
  transition: 0.3s ease;
  z-index: 20;
}

.sp-menu.open {
  left: 0;
}

.sp-menu nav {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.sp-menu a {
  color: #fff;
  text-decoration: none;
  font-size: 1.2rem;
}

/* PC/SP 切り替え */
@media (max-width: 1020px) {

  .header-pc {
    display: none !important;
  }

   .header-sp {
    position: relative;
    display: flex !important;
    justify-content: center; /* ロゴを中央に */
    align-items: center;
    width: 100%;
  }

  /* ハンバーガーを左固定 */
  .hamburger {
    position: absolute;
    left: 0.5rem;
    top: 45%;
    transform: translateY(-50%);
	font-size: 1.6rem;
	background: none;
	border: none;
	color: #fff;
  }

  /* 検索アイコンを右固定 */
  .search-icon {
    position: absolute;
    right: 1.3rem;
    top: 45%;
    transform: translateY(-50%);
  }
}


</style>
